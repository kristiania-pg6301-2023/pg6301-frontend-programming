{
  "name": "pg6301-frontend-programming",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently npm:dev:client npm:dev:server",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run check && npm run build:client",
    "build:client": "cd client && npm run build",
    "check": "npm run check:prettier && npm run check:typescript && npm test",
    "check:prettier": "prettier --check .",
    "prettier": "prettier --write .",
    "check:typescript": "npm run check:typescript:client",
    "check:typescript:client": "cd client && npm run check:typescript",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd client && npm test",
    "test:server": "cd server && npm test",
    "postinstall": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm install --include=dev",
    "install:server": "cd server && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  }
}
